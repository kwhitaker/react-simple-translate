{
  "name": "react-simple-translate",
  "version": "1.0.0",
  "description": "An easy to use and implement translation suite for React",
  "entry": "",
  "main": "./lib/index.js",
  "types": "./lib/",
  "author": "Kevin Whitaker",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "yarn clean && tsc",
    "clean": "rimraf ./lib",
    "lint": "tslint --project .",
    "start": "tsc --watch",
    "test:watch": "jest --watchAll",
    "test": "jest",
    "tslint-check": "tslint-config-prettier-check ./tslint.json"
  },
  "jest": {
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.test.(ts|js|tsx)"
    ],
    "testURL": "http://www.example.com/"
  },
  "peerDependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "dependencies": {
    "counterpart": "^0.18.6",
    "tslib": "^1.9.3"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.12",
    "@types/enzyme-adapter-react-16": "^1.0.2",
    "@types/jest": "^23.3.0",
    "@types/node": "^10.5.2",
    "@types/react": "^16.4.6",
    "@types/react-dom": "^16.0.6",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "jest": "^23.4.1",
    "prettier": "^1.13.7",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "^2.9.2"
  }
}
