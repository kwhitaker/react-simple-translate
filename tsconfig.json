{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es6",
    "noUnusedLocals": false,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "declaration": true,
    "jsx": "react",
    "lib": ["es2017", "dom", "esnext.asynciterable"],
    "outDir": "lib"
  },
  "compileOnSave": false,
  "exclude": ["**/*.test.*"]
}
